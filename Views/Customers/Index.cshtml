
@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>The Customers List :</h2>

<table id="customers" class="table table-bordered table-hover">
   

    @if (!Model.Any())
    {
        <text> there is not any Customer here ! </text>
    }
    else
    {

        <thead>
        <tr>
            <th  style="text-align: center" >Customer</th>
            <th style="text-align: center" >Discount Rate</th>
            <th style="text-align: center">Delete</th>

        </tr>
        </thead>

        foreach (var customer in Model)
        {
            <tr style="text-align: center">
                <th style="text-align: center"> <a href="Customers/Details/@customer.Id"> @customer.Name </a> </th>
                <td> @customer.MembershipType.Name </td>
                <td>
                     <button class="btn-link js-delete" >Delete</button>
                </td>
            </tr>

        }
    }


</table>

